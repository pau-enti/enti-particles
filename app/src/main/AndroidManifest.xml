<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.particles">
    <!-- <uses-permission android:name="android.permission.CAMERA" /> -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_particles"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Physics_model"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.particles2.StandardModelActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <service
            android:name=".chat_app.notifications.NotificationsService"
            android:stopWithTask="false" />

        <activity
            android:name="com.example.particles.chat_app.contacts.ContactsActivity"
            android:exported="true">

        </activity>
        <activity
            android:name="com.example.particles.chat_app.chat.ChatActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity
            android:name=".ui.nasa.NasaPhotosActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ParticleEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.user.LoginActivity"
            android:label="Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.user.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Physics_model.NoActionBar" />
    </application>

</manifest>